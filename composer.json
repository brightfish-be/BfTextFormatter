{
    "name": "brightfish/textformatter",
    "description": "Format text the Brightfish way",
    "keywords": [
        "brightfish",
        "textformatter"
    ],
    "homepage": "https://github.com/brightfish/textformatter",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Forret @ BF",
            "email": "p.forret@brightfish.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Brightfish\\TextFormatter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Brightfish\\TextFormatter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "version": "0.0.1"
}
